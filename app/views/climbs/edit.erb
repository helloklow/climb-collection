<h1>Edit <%= @climb.name %></h1>

<br><br>

<form method="POST" action="/climbs/<%= @climb.id %>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="name">Name: </label>
  <input type="text" name="name" id="name" value="<%= @climb.name %>">
  <br><br>
  <label for="grade">Grade: </label>
  <input type="text" name="grade" id="grade" value="<%= @climb.grade %>">
  <br><br>
  <label for="location">Location: </label>
  <input type="text" name="location" id="location" placeholder="crag, city, state" value="<%= @climb.location %>">
  <br><br>
  <label for="status">Status: </label> <br>
  <input type="radio" name="status" id="status" value="<%= @climb.status %>"> Project <br>
  <input type="radio" name="status" id="status" value="<%= @climb.status %>"> Send <br>
  <input type="radio" name="status" id="status" value="<%= @climb.status %>"> Flash
  <br><br>
  <label for="category">Category: </label> <br>
  <input type="radio" name="category" id="category" value="<%= @climb.category %>"> Boulder <br>
  <input type="radio" name="category" id="category" value="<%= @climb.category %>"> Sport <br>
  <input type="radio" name="category" id="category" value="<%= @climb.category %>"> Trad
  <br><br>
  <label for="notes">Notes: </label>
  <textarea id="notes" name="notes" rows="5" cols="30" placeholder="Enter notes here" value="<%= @climb.notes %>"></textarea>
  <br><br>
  <input type="submit" value="Update" id="submit">
</form>
<form method="POST" action="/climbs/<%= @climb.id %>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete">
</form>
<a href="/account">My Account</a>

